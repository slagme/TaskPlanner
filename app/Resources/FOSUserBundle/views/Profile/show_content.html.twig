<div class="fos_user_user_show">
    <h2>{{ 'profile.show.username'|trans }}: {{ user.username }}</h2>
    <h3>{{ 'profile.show.email'|trans }}: {{ user.email }}<h3>
    <h4> Your tasks:</h4>
    <p> {% for task in user.tasks %} </p>
            {{ task.name }} <br>
            {{ task.description }} <br>
            {{ task.priority }} <br>
            {{ task.deadline | date("Y/m/d h:i:s") }}
        {% else %}

        <p> You have no task yet.</p>


        {% endfor %}
            <li>

            <a href="{{  path ('addTask', {'id' : user.id}) }}"> Want to add new task? </a>
            </li>
</div>
